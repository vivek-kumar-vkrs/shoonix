{
  "compilerOptions": {
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "target": "es6",
    "module": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "skipLibCheck": true, /* Skip type checking of declaration files. */
    "forceConsistentCasingInFileNames": true /* Disallow inconsistently-cased references to the same file. */
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test/**/*",
    "dist"
  ]
}